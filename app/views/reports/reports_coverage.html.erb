  var range = {
    Metric: {
      "0_10": "0 - 10",
      "10_20": "10 - 20",
      "20_30": "20 - 30",
      "30_40": "30 - 40",
      "40_50": "40 - 50",
      "50_60": "50 - 60"
    },
    Impreial: {
      "40_50": "40 - 50",
