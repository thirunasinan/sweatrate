  <div class="forget-password-screen">
    <div class="app-title">
    <h2>Forgot your password?</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group form-group">
        <span class="input-group-addon password-group"><i class="fa fa-lock"></i></span>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Forgert password' %>
      </div>

      <div class="actions">
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
           Reset <i class="fa fa-send"></i>
        <% end %>
      </div>
    <% end %>
    <div class="redirect-action first">
      <p>Existing User? Welcome.  <%= link_to "SIGNIN HERE", new_session_path(resource_name) %></p>
    </div>
    <div class="redirect-action">
      <p>Don't have any account? <%= link_to "REGISTER NOW", new_registration_path(resource_name) %></p>
    </div>
  </div>